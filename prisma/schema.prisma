generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  Pending
  Interview
  Declined
}

enum JobType {
  FullTime
  PartTime
  Internship
}

model Job {
  id String @id @default(uuid())
  clerkId String
  position String
  company String
  location String
  status JobStatus
  type JobType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}